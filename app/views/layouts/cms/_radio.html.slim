.form-group
  - if defined? field_label
    = form.label key, field_label, class: 'small font-weight-bold'
  - else
    = form.label key, class: 'small font-weight-bold'
  - options.each do |hash|
    .custom-control.custom-radio
      = form.radio_button key, hash[:value], class: 'custom-control-input', required: required
      label.custom-control-label id="label_#{form.object.class.name.underscore}_#{key}_#{hash[:value]}" for="#{form.object.class.name.underscore}_#{key}_#{hash[:value]}"= hash[:label]
